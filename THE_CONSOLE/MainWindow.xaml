<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="THE CONSOLE" Height="350" Width="525">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="181*"/>
            <RowDefinition x:Name="BottomRow" Height="139*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InputBox" TextWrapping="Wrap" HorizontalContentAlignment="Stretch" FontFamily="Envy Code R" AcceptsReturn="True" AcceptsTab="True" Grid.Row="1" VerticalContentAlignment="Stretch" SpellCheck.IsEnabled="True" TextChanged="TextBox_TextChanged" VerticalScrollBarVisibility="Auto" KeyDown="InputBox_KeyDown" Background="Black" Foreground="White"/>
        <RichTextBox x:Name="OutputBox" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" Background="Black" Foreground="White" SelectionBrush="#FF537EAA">
            <FlowDocument/>
        </RichTextBox>
    </Grid>
</Window>
